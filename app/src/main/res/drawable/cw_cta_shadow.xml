<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 15dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <!--            Button Shadow Color -->
            <solid android:color="@color/gold_shadow_cta" />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <item android:bottom="15px">

        <shape  android:shape="rectangle">
            <padding
                android:left="30dp"
                android:right="30dp"/>

            <!--            Button TOP Color -->
            <solid android:color="@color/gold_bg_cta" />
            <corners android:radius="10dp" />
        </shape>

    </item>


</layer-list>